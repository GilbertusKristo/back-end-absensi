          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "address": {
            "type": "string",
            "example": "Jl. Mawar No. 123"
          },
          "phone": {
            "type": "string",
